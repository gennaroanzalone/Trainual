%h1 Users


%table.table.table-striped
  %thead
    %tr
      %th{:scope => "col"} Last Updated
      %th{:scope => "col"} Name
      %th{:scope => "col"} Email
      %th{:scope => "col"} Title
      %th{:scope => "col"} Phone
      %th{:scope => "col"} Status
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr{:scope => "row"}
        %td= user.updated_at
        %td= user.name
        %td= user.email
        %td= user.title
        %td= user.phone
        %td= user.status
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New User', new_user_path
